@import 'nib'
global-reset()
@import 'responsive'

body
  font-family 'Source Sans Pro'
  padding 20px 0

#page
  max-width 960px
  margin 0 auto

.header
  font-size 24px

  label
    .twitter
      color #55acee

a
  text-decoration none
  color blue

.title
  text-transform uppercase
  font-size 30px
  letter-spacing -1px
  margin-bottom 20px

  a
    color orange

.center
  text-align center

.half
  width 50%

  @media (max-device-width : 960px)
    width 100%


.content
  font-family 'Roboto Slab'
  line-height 130%

  img
    width 100%
  h2
    font-size 24px
  h3
    font-size 20px
  p, h2, h3
    margin-bottom 10px
  a
    color blue
    text-decoration none
  hr
    padding 0
    border none
    border-top 2px solid gray
    color gray
    text-align center
    margin-top 40px
  hr:after
    content "ยง"
    display inline-block
    position relative
    top -0.7em
    font-size 1.5em
    padding 0 0.25em
    background white
  .highlight
    font-family Courier
    overflow auto
    padding 20px
    margin-bottom 20px
  code
    font-family Monaco,Menlo,Consolas,"Courier New",monospace
    background #f7f7f9
    border 1px solid #e1e1e8
    color #c25
    padding 0 3px
    white-space normal

.container
  padding 0px 0

#post-index
  list-style none

  li
    margin 20px 0 10px
  .image
    width 100%

.footer
  color #ccc
